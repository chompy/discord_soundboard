{
    "rules": {
        "indent": [2, 4],
        "linebreak-style": [2, "unix"],
        "semi": [2, "always"]
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    }
}
